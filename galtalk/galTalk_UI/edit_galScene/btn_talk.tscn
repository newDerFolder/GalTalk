script/source = "extends Button

var id:int

func _process(delta: float) -> void:
	if get_gen().now_talk==id:
		self_modulate=Color(1,1,5,1)
	else:
		self_modulate=Color(1,1,1,1)
	if id<get_gen().story_list.size():
		text=str(id)+\" test测试剧本名称\"
		
		visible=true
	elif id==get_gen().story_list.size():
		text=\"点击增加新对话\"
		visible=true
	else:
		visible=false

func get_gen():
	return get_parent().get_parent().get_parent().get_parent().get_parent()


func _on_pressed() -> void:
	if id<get_gen().story_list.size():
		get_gen().now_talk=id
	elif id==get_gen().story_list.size():
		if get_gen().story_list.size()<500:
			get_gen().add_new_talk()
			get_gen().now_talk=id
		else:
			pass
	else:
		visible=false
	pass # Replace with function body.
"

