script/source = "extends VBoxContainer

func get_mainNode():
	return get_parent().get_parent().get_parent()
func get_nowStory():
	return get_mainNode().story_list[get_mainNode().now_talk]

func _ready() -> void:
	chang_talk()

func chang_talk():
	$Label2.text=get_nowStory()[\"text_role\"]+\":\"+get_nowStory()[\"text_textbox\"]
	$cantChoose.button_pressed=get_nowStory()[\"talk_cantChoose\"]
	for op in $ScrollContainer/nextOpList.get_children():
		op.queue_free()
	var num=0
	for i in get_nowStory()[\"talk_chooseList\"]:
		var a=preload(\"res://galtalk/galTalk_UI/edit_galScene/btn_nextOp.tscn\").instantiate()
		a.id=num
		$ScrollContainer/nextOpList.add_child(a)
		num+=1


func _on_button_pressed() -> void:
	var num=0
	for i in $ScrollContainer/nextOpList.get_children():
		num+=1
	get_nowStory()[\"talk_chooseList\"].append(GalEditor.empty_nextItem())
	var a=preload(\"res://galtalk/galTalk_UI/edit_galScene/btn_nextOp.tscn\").instantiate()
	a.id=num
	$ScrollContainer/nextOpList.add_child(a)


func _on_cant_choose_toggled(toggled_on: bool) -> void:
	get_nowStory()[\"talk_cantChoose\"]=toggled_on
	pass # Replace with function body.


func _on_win_talk_next_canceled() -> void:
	queue_free()
	pass # Replace with function body.


func _on_win_talk_next_confirmed() -> void:
	queue_free()
	pass # Replace with function body.
"

